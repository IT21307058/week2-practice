{
  "consumer": {
    "name": "PostsClient"
  },
  "interactions": [
    {
      "description": "a request to delete a post",
      "providerStates": [
        {
          "name": "post exists with id abc123"
        }
      ],
      "request": {
        "method": "DELETE",
        "path": "/posts/abc123"
      },
      "response": {
        "body": {
          "deletedId": "abc123",
          "message": "Post deleted successfully",
          "requestId": "uuid-1234",
          "success": true
        },
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "matchingRules": {
          "body": {
            "$.deletedId": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.message": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$.requestId": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            }
          }
        },
        "status": 200
      }
    },
    {
      "description": "get posts",
      "providerStates": [
        {
          "name": "posts exist"
        }
      ],
      "request": {
        "method": "GET",
        "path": "/posts/"
      },
      "response": {
        "body": [
          {
            "_id": "p1",
            "description": "Desc",
            "fileUrl": "/files/f1",
            "name": "Sample"
          }
        ],
        "headers": {
          "Content-Type": "application/json; charset=utf-8"
        },
        "matchingRules": {
          "body": {
            "$": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type",
                  "min": 1
                }
              ]
            },
            "$[*]._id": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$[*].description": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$[*].fileUrl": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            },
            "$[*].name": {
              "combine": "AND",
              "matchers": [
                {
                  "match": "type"
                }
              ]
            }
          }
        },
        "status": 200
      }
    }
  ],
  "metadata": {
    "pact-js": {
      "version": "16.0.2"
    },
    "pactRust": {
      "ffi": "0.4.28",
      "models": "1.3.5"
    },
    "pactSpecification": {
      "version": "3.0.0"
    }
  },
  "provider": {
    "name": "PostsAPI"
  }
}